{
  "indexes": [
    {
      "collectionGroup": "menuItems",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "isActive", "order": "ASCENDING" },
        { "fieldPath": "sort",      "order": "ASCENDING" }
      ]
    },

    // Branch-scoped categories (matches existing index shown by CLI)
    {
      "collectionGroup": "categories",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "isActive", "order": "ASCENDING" },
        { "fieldPath": "parentId", "order": "ASCENDING" },
        { "fieldPath": "sort",     "order": "ASCENDING" }
      ]
    },

    // Collection-group categories (if any code uses collectionGroup queries)
    {
      "collectionGroup": "categories",
      "queryScope": "COLLECTION_GROUP",
      "fields": [
        { "fieldPath": "isActive", "order": "ASCENDING" },
        { "fieldPath": "parentId", "order": "ASCENDING" },
        { "fieldPath": "sort",     "order": "ASCENDING" }
      ]
    },
    {
      "collectionGroup": "categories",
      "queryScope": "COLLECTION_GROUP",
      "fields": [
        { "fieldPath": "isActive", "order": "DESCENDING" },
        { "fieldPath": "parentId", "order": "ASCENDING" },
        { "fieldPath": "sort",     "order": "ASCENDING" }
      ]
    },

    // Orders: For sound alerts (pending orders sorted by creation time)
    {
      "collectionGroup": "orders",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "status", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },

    // Active Orders: For customer active orders (userId + status whereIn + createdAt)
    {
      "collectionGroup": "orders",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "userId", "order": "ASCENDING" },
        { "fieldPath": "status", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },

    // WhatsApp Worker: New orders (status + waNewSent flag + createdAt)
    {
      "collectionGroup": "orders",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "status", "order": "ASCENDING" },
        { "fieldPath": "notifications.waNewSent", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "ASCENDING" }
      ]
    },

    // WhatsApp Worker: Cancelled orders (status + waCancelSent flag + createdAt)
    {
      "collectionGroup": "orders",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "status", "order": "ASCENDING" },
        { "fieldPath": "notifications.waCancelSent", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "ASCENDING" }
      ]
    }
  ],
  "fieldOverrides": []
}
